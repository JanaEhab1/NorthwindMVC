@model NorthwindMVC.Models.Category
@{
    Layout = null;
}
<h2>Create</h2>

<form id="createForm">
    <div class="form-group">
        <label>Name</label>
        <input name="CategoryName" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Description</label>
        <textarea name="Description" class="form-control"></textarea>
    </div>
    <div id="createError" class="text-danger"></div>
    <button type="submit" class="btn btn-primary">Save</button>
    <a href="@Url.Action("Index")" class="btn btn-primary">Back</a>
</form>

<script>
$("#createForm").submit(function (e) {
    e.preventDefault();
    $.post('@Url.Action("Create","Category")', $(this).serialize(), function (res) {
        if (res.success) {
            location.reload();
        } else {
            $("#createError").text(res.message);
        }
    });
});
</script>